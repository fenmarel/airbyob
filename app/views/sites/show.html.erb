<div class="container">
  <h1><%= @site.title%></h1>
  <h4><%= @site.location %></h4>
  <div class="row">

    <div class="col-xs-8">
      <div class="site-pictures">
        <!-- TODO: placeholder -->
        <img class="site-picture" src="http://upload.wikimedia.org/wikipedia/commons/e/e1/Gocsej_village_house_backyard.jpg">
      </div>

      <div class="site-info">
        <ul class="nav nav-tabs">
          <li class="active">
            <a href="#description" data-toggle="tab">Description</a>
          </li>
          <li>
            <a href="#amenities" data-toggle="tab">Amenities</a>
          </li>
        </ul>

        <div class="tab-content">
          <div class="tab-pane active" id="description">
            <p><%= @site.description %></p>
          </div>
          <div class="tab-pane" id="amenities">...</div>
        </div>

      </div>
    </div>

    <div class="col-xs-4">
      <div class="well">
        From: $<%= @site.price %>
        <%= link_to "Book It", "#", :class => "btn btn-primary book-btn"%>
      </div>

      <div class="well">
        <%= button_to "Save to Wishlist", "#", :class => "btn btn-default fav-btn"%>
      </div>

      <div class="well owner-info">
        <!-- TODO: placeholder -->
        <img class="owner-picture" src="http://upload.wikimedia.org/wikipedia/commons/2/27/Sherman_Profile.png">

        <%= link_to @owner.username, user_url(@owner), :class => "owner-link" %>

        <%= link_to "Contact Me", "#", :class => "btn btn-default contact-btn" %>
      </div>
    </div>
  </div>
</div>